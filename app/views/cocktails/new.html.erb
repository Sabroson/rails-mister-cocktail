<div class="columns">
  <div class="column is-half is-offset-one-quarter">
  <h1 class="title">Add a new cocktail</h1>
  <%= form_for(@cocktail) do |f| %>
    <div class="field">
      <label class="label"><%= f.label :name, class: 'label' %></label>
      <div class="control">
        <%= f.text_field :name, class: 'input' %>
      </div>
    </div>
  <%= f.submit class: 'button is-primary' %>
  <% end %>
  </div>
</div>




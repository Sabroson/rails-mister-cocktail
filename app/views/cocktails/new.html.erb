<div class="columns">
  <div class="column is-half is-offset-one-quarter">
  <h1 class="title">Add a new cocktail</h1>
  <%= form_for(@cocktail) do |f| %>
    <div class="field">
      <label class="label"><%= f.label :name, class: 'label' %></label>
      <div class="control">
        <%= f.text_field :name, class: 'input' %>
      </div>
    </div>
    <div class="field">
      <div class="file has-name">
        <label class="file-label">
          <%= f.file_field :photo, class: 'file-input' %>
          <%= f.hidden_field :photo_cache, as: :hidden %>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Add a pictureâ€¦
            </span>
          </span>
          <span class="file-name">
            no image selected
          </span>
        </label>
      </div>
    </div>
    <div class="field">
      <%= f.submit class: 'button is-primary' %>
    </div>
  <% end %>
  </div>
</div>




<h1 class="title"><%= @cocktail.name %></h1>

<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><%= link_to 'all cocktails', cocktails_path  %></li>
    <li class="is-active"><a href="#" aria-current="page"><%= @cocktail.name %></a></li>
  </ul>
</nav>


<table class="table is-striped">
  <thead>
    <tr>
      <th>Amount:</th>
      <th>Ingredient:</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cocktail.doses.each do |dose| %>
    <tr>
      <td><%= dose.description %></td>
      <td><%= dose.ingredient.name %></td>
      <td>
        <%= link_to dose_path(dose), method: :delete do  %>
          <span class="icon has-text-danger">
            <i class="fas fa-trash"></i>
          </span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Add dose',  new_cocktail_dose_path(@cocktail), class: 'button is-primary'%>
